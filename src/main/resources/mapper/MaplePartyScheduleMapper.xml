<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.let.service.impl.mapper.MaplePartyScheduleMapper">
    <insert id="insertMapleParytSchedule"
            parameterType="com.let.domain.MaplePartyScheduleVO"
            useGeneratedKeys="true"
            keyProperty="id"
            keyColumn="id">

        INSERT INTO maple_boss_party (
        party_title,
        channel_id,
        party_time,
        party_date,
        created_at,
        use_at
        )
        VALUES (
        #{title},
        #{channelId},
        #{time},
        #{date},
        CURRENT_TIMESTAMP,
        'Y'
        )
    </insert>

    <insert id="insertPartyMemberList" parameterType="com.let.domain.MaplepartyMemberVO">
        INSERT INTO maple_party_member (party_id, discord_user_id)
        VALUES
        <foreach collection="members" item="member" separator=",">
            (#{partyId}, #{member.id})
        </foreach>
    </insert>

    <select id="selectPartySchedule" parameterType="com.let.domain.MaplePartyScheduleVO" resultType="com.let.domain.MaplePartyScheduleVO">
        SELECT
            id,
            party_title as title,
            channel_id as channelId,
            party_time as time,
        party_date as date,
            use_at as useAt
        from
            maple_boss_party
        where
            id = #{id}
    </select>

    <resultMap id="searchScheduleMap" type="com.let.domain.MaplePartySearchVO">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="channelId" column="channelId"/>
        <result property="time" column="time"/>
        <result property="date" column="date"/>
        <collection property="memberDiscordId" javaType="java.util.ArrayList" ofType="string">
            <result column="memberDiscordId"/>
        </collection>
    </resultMap>
    <select id="searchPartySchedule" resultMap="searchScheduleMap">
        SELECT
            b.id,
            b.party_title as title,
            b.channel_id as channelId,
            b.party_time as time,
            b.party_date as date,
            m.discord_user_id as memberDiscordId
        FROM
            maple_boss_party b
            inner join maple_party_member m on b.id = m.party_id
        WHERE
            use_at = 'Y'  and
            party_date >= FORMATDATETIME(CURRENT_TIMESTAMP(), 'yyyy-MM-dd')

    </select>
</mapper>