<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.let.service.impl.mapper.MaplePartyScheduleMapper">
    <insert id="insertMapleParytSchedule"
            parameterType="com.let.domain.MaplePartyScheduleVO"
            useGeneratedKeys="true"
            keyProperty="id"
            keyColumn="id">

        INSERT INTO maple_boss_party (
        party_title,
        channel_id,
        party_time,
        party_date,
        created_at,
        use_at
        )
        VALUES (
        #{title},
        #{channelId},
        #{time},
        #{date},
        CURRENT_TIMESTAMP,
        'Y'
        )
    </insert>

    <insert id="insertPartyMemberList" parameterType="com.let.domain.MaplePartyMemberVO">
        INSERT INTO maple_party_member (party_id, discord_user_id)
        VALUES
        <foreach collection="members" item="member" separator=",">
            (#{partyId}, #{member})
        </foreach>
    </insert>

    <select id="selectPartySchedule" parameterType="com.let.domain.MaplePartyScheduleVO" resultType="com.let.domain.MaplePartyScheduleVO">
        SELECT
            id,
            party_title as title,
            channel_id as channelId,
            party_time as time,
        party_date as date,
            use_at as useAt
        from
            maple_boss_party
        where
            id = #{id}
    </select>

    <resultMap id="searchScheduleMap" type="com.let.domain.MaplePartySearchVO">
        <!-- 부모(스케줄) 한 건을 묶어주기 위한 키: join 결과(멤버 N명)에서 컬렉션이 제대로 합쳐지려면 <id>가 필요 -->
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="channelId" column="channelId"/>
        <result property="time" column="time" jdbcType="TIME"/>
        <result property="date" column="date" jdbcType="DATE"/>
        <!-- 멤버는 row마다 1개씩 오므로 List로 누적 -->
        <collection property="memberDiscordId" ofType="java.lang.String">
            <result column="memberDiscordId"/>
        </collection>
    </resultMap>
    <select id="searchPartySchedule" resultMap="searchScheduleMap">
        SELECT
            b.id as "id",
            b.party_title as "title",
            b.channel_id as "channelId",
            b.party_time as "time",
            b.party_date as "date",
            m.discord_user_id as "memberDiscordId"
        FROM
            maple_boss_party b
            inner join maple_party_member m on b.id = m.party_id
        WHERE
            b.use_at = 'Y'
            AND b.party_date >= CURRENT_DATE
            AND b.party_time >= CURRENT_TIME
        ORDER BY b.id

    </select>
    <update id="updatePartyUseAt" parameterType="com.let.domain.MaplePartySearchVO" >
        update
            maple_boss_party
        set
            use_at = 'N'
        where
            id = #{id}
    </update>
</mapper>